	// check==1 세션값 삭제, 삭제성공메시지, loginForm.jsp 이동
	// check==0 비밀번호틀림. 뒤로이동
	if(check==1){
	 session.invalidate();
 %>
	 <script type="text/javascript">
	 alert("삭제 성공!");
	 location.href="loginForm.jsp";
	 </script>
 <%
	} else if(check == 0) {
 %>
	 <script type="text/javascript">
	 	alert("비밀번호 틀림");
		 history.back();
